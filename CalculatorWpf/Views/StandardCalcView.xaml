<UserControl x:Class="CalculatorWpf.Views.StandardCalcView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CalculatorWpf.Views"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="../Resources/StandardCalcViewDictionary.xaml"/>
    </UserControl.Resources>
    <Grid Style="{StaticResource MainGridStyle}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                            Orientation="Horizontal">
                    <Button
                        Content="☰"/>
                    <TextBlock
                        Text="Standard"/>
                </StackPanel>

                <TextBlock Grid.Row="1"/>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MaxWidth="400" Width="*"/>
                        <ColumnDefinition Width="0.00001*"/>
                    </Grid.ColumnDefinitions>
                    <UniformGrid
                             Columns="5">
                        <Button
                            Content="MC"
                            Style="{StaticResource GreySpecialMButtons}"/>
                        <Button 
                            Content="MR"
                            Style="{StaticResource GreySpecialMButtons}"/>
                        <Button
                            Content="M+"
                            Style="{StaticResource BlackSpecialMButtons}"/>
                        <Button 
                            Content="M-"
                            Style="{StaticResource BlackSpecialMButtons}"/>
                        <Button
                            Content="MS"
                            Style="{StaticResource BlackSpecialMButtons}"/>
                    </UniformGrid>
                </Grid>

                <UniformGrid Grid.Row="3"
                             Rows="6"
                             Columns="4">
                    <Button Content="%"/>
                    <Button Content="√"/>
                    <Button Content="x²"/>
                    <Button Content="1/x"/>
                    <Button Content="CE"/>
                    <Button Content="C"/>
                    <Button Content="⌫"/>
                    <Button Content="÷"/>
                    <Button Content="7" 
                            Style="{StaticResource NumericButtons}"/>
                    <Button Content="8"
                            Style="{StaticResource NumericButtons}"/>
                    <Button Content="9"
                            Style="{StaticResource NumericButtons}"/>
                    <Button Content="×"/>
                    <Button Content="4"
                            Style="{StaticResource NumericButtons}"/>
                    <Button Content="5"
                            Style="{StaticResource NumericButtons}"/>
                    <Button Content="6"
                            Style="{StaticResource NumericButtons}"/>
                    <Button Content="−"/>
                    <Button Content="1"
                            Style="{StaticResource NumericButtons}"/>
                    <Button Content="2"
                            Style="{StaticResource NumericButtons}"/>
                    <Button Content="3"
                            Style="{StaticResource NumericButtons}"/>
                    <Button Content="+"/>
                    <Button Content="±"/>
                    <Button Content="0"
                            Style="{StaticResource NumericButtons}"/>
                    <Button Content=","/>
                    <Button Content="="/>
                </UniformGrid>

            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock 
                    Text="History"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
